<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jereksel.libresubstratum">

    <uses-permission android:name="projekt.interfacer.permission.ACCESS_SERVICE"/>
    <uses-permission android:name="projekt.interfacer.permission.ACCESS_SERVICE_INNER"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:resizeableActivity="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.main.MainView"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.detailed.DetailedView_" />
        <activity android:name=".activities.installed.InstalledView_" />
    </application>

</manifest>